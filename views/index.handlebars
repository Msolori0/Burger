<div style="text-align:center" class="row">   
  <div class="col-md-12">
    <img src="assets/img/" alt="BURGER" id="burger-image">
    <h2>Eat-Da-Burger</h2>
  </div>
</div> 

<div class="row">
  <div class="col-md-6">

  <section id="undevoured-burgers">
    
    <ul id="burger-list">
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
              {{this.id}}
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn btn-info btn-sm" type="submit">Devour It!</button>
              </form>

          </li>
        {{/unless}}
      {{/each}}
    </ul>

  </section>  
  </div>

<div class="col-md-6">
  <h4>Devoured!</h4>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li class="devoured">
        {{this.id}}
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-update-form" action="/" method="POST">

  </div class="form-group">
  <input type ="text" id="new-burger" name="burger_name">
  <button class="btn btn-info btn-lg" type ="submit">Add Burger!</button> 
  </div>

</form>
</div>
</div>